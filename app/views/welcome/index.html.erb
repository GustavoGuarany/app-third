<p>O Idioma usado nessa aplicação é: <%= locale %></p>
<h1>Seja Bem-Vindo </h1>

<%= render "menu" %>

<h4>Moedas</h4>

<div>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= @coins.human_attribute_name(:description)%></th>
        <th><%= @coins.human_attribute_name(:acronym)%></th>
        <th><%= @coins.human_attribute_name(:url_image)%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td><%= image_tag coin.url_image, size: "45x45" %></td>
          <td><%= link_to 'Mostrar', coin, class:"btn btn-secondary" %></td>
          <td><%= link_to 'Editar', edit_coin_path(coin), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
