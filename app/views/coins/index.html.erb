<p style="color: green"><%= notice %></p>



<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th>Tipo de Mineração</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag  coin.url_image, size: "45x45" %></td>
        <td><%= coin.mining_type.acronym %></td>
        <td><%= link_to 'Mostrar', coin, class:"btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin), class:"btn btn-default" %></td>
        <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mb-3">
<%= link_to "Cadastrar Nova Moeda", new_coin_path, class:"btn btn-dark"%>
</div>
